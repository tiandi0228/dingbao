.container {
  width: 100%;
  height: 100%;
  background-color: #f9f9f9;
  position: fixed;
  top: 0;
  left: 0;
}

.userinfo {
  padding: 20px 0;
  background-color: #fff;
  overflow: hidden;
  text-align: center;
  border-bottom: 1px #dedede solid;
}

.userinfo .userinfo-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.userinfo-nickname {
  padding: 10px 0;
  display: block;
}

.list-con {
  width: 100%;
  background-color: #fff;
  margin-top: 10px;
  padding: 0 0 0 10px;
  border-top: 1px #dedede solid;
  border-bottom: 1px #dedede solid;
}

.list {
  height: 36px;
  line-height: 36px;
  padding: 0 20px 0 0;
  background-color: #fff;
  border-bottom: 1px #dedede solid;
  overflow: hidden;
}

.list .name {
  float: left;
}

.list .iconfont {
  float: right;
  color: #ccc;
}

.list:last-child {
  border: none;
}
