.container {
  padding: 0 10px;
  height: 100%;
}

.list {
  width: 100%;
  padding-top: 20px; 
  position: relative;
  height: 120px;
  overflow: hidden;
}

.info {
  width: 70%;
  float: left;
  height: 120px;
}

.info .logo {
  float: left;
  width: 80px;
  height: 120px;
}

.info .con {
  float: left;
}

.info .name, .info .copies, .info .price, .info .year, .info .picker {
  display: block;
  font-size: 12px;
  padding: 5px 0 0 10px;
}

.info .name {
  font-size: 14px;
  font-weight: bold;
}

.num {
  position: absolute;
  top: 50%;
  right: 0px;
  margin-top: -5px;
}

.num input {
  float: left;
  width: 20px;
  height: 28px;
  min-height: 28px;
  border-width: 1px 0;
  border-style: solid;
  border-color: #ccc;
  padding: 0 10rpx;
  text-align: center;
  font-size: 14px;
}

.num .reduce, .num .plus {
  float: left;
  width: 25px;
  height: 28px;
  text-align: center;
  line-height: 28px;
  font-size: 16px;
  border: 1px #ccc solid;
}

.payment {
  width: 100%;
  position: absolute;
  bottom: 10px;
  right: 10px;
}

.payment .total {
  float: right;
  line-height: 36px;
  padding-right: 20px;
  font-size: 14px;
}

.payment .btn {
  float: right;
  border: 1px #ccc solid;
  font-size: 16px;
  width: 60px;
  height: 36px;
  text-align: center;
  line-height: 36px;
  background-color: #f9f9f9;
}
